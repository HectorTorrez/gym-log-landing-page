---
interface Props {
    title: string;
    subtitle: string;
    href?: string;
    isWeb: boolean;
}

const {title, subtitle, href, isWeb} = Astro.props;
---

<section class="bg-black max-w-[132px] w-full p-1 rounded-md text-white">
    {
        href && (
                    <article>
                        <img src={href} alt={title}/>
                    </article>
        )
    }
    <section>
        <p
                class={isWeb
                    ? " flex items-center gap-5 justify-center font-bold text-[18px]"
                    : "flex flex-col items-center font-bold text-[18px]"}
        >
            <span class="font-thin text-[14px]">{subtitle}</span>
            {title}
        </p>
    </section>
</section>
